{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist",
    "stripInternal": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
